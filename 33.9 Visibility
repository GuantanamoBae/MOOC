import java.util.ArrayList;

public class Changer {
    private ArrayList<Change> changes;


    public Changer() {
        changes = new ArrayList<Change>();
    }

    public void addChange(Change change) {
        changes.add(change);
    }

    public String change(String characterString) {
        for (Change Change : changes) {
            characterString = Change.change(characterString);
        }
        return characterString;
    }
}
///////////////////////////////////////////////////////////////////////

public class Change {
    private char from;
    private char to;

    public Change(char fromCharacter, char toCharacter){
        this.from = fromCharacter;
        this.to = toCharacter;
    }

    public String change(String characterString){
        String newString = characterString.replace(from, to);
        return newString;
    }
}
/////////////////////////////////////////////////////////////////////

public class Main {

    public static void main(String[] args) {

        //Exercise 1: Smileys
        printWithSmileys("Method");
        printWithSmileys("Beerbottle");
        printWithSmileys("Interface");

//        Exercise 2.1: Change-class
        String word = "carrot";
        Change change1 = new Change('a', 'b');
        word = change1.change(word);

        System.out.println(word);

        Change Change2 = new Change('r', 'x');
        word = Change2.change(word);

        System.out.println(word);

//        Exercise 2.2: Changer-class
        Changer scandiesAway = new Changer();
        scandiesAway.addChange(new Change('ä', 'a'));
        scandiesAway.addChange(new Change('ö', 'o'));
        System.out.println(scandiesAway.change("ääliö älä lyö, ööliä läikkyy"));



    }


    private static void printWithSmileys(String characterString) {
        int length = characterString.length();
        printTop(length);
        System.out.println();
        if(length % 2 == 1){
            System.out.println(":)" + characterString + " :)");
            System.out.println();
        }
        else {
            System.out.print(":)" + characterString + ":)");
            System.out.println();
        }
        printTop(length);
    }

    public static void printTop(int length){
        for(int i = 0; i < ((length + 5) / 2); i++){
            System.out.print(":)");
        }
    }

}

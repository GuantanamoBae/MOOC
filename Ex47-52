import java.util.Scanner;

public class Main {

    //Exercise 47: The length of a name
    public static int calculateCharacters(String text){

        return text.length();
    }

    //Exercise 48: First character
    public static char firstCharacter(String text){

        return text.charAt(0);
    }

    //Exercise 49: Last character
    static char lastCharacter(String text){

        return text.charAt(text.length() - 1);
    }

    //Exercise 50: Separating first characters
    public static void separating(String text){
        int count = 0;
        if(text.length() < 3){
            return;
        }
        while (count != 3){
            System.out.println((count + 1) + ". character: " + text.charAt(count));
            count++;
        }
        return;
    }

    //Exercise 51: Separating characters
    public static void wholeSeparation(String text){
        int count = 0;
        while (count != text.length()){
            System.out.println((count + 1) + ". character: " + text.charAt(count));
            count++;
        }
        return;
    }

    //Exercise 52: Reversing a name
    public static void reverse(String text){

        int count = text.length();
        while (count != 0){
            count--;
            System.out.print(text.charAt(count));
        }
        return;
    }

    public static void main(String[] args) {
        String text = "paul";
        System.out.println("Number of characters: " + calculateCharacters(text));

        System.out.println("Enter Your name");
        Scanner read = new Scanner(System.in);
        String name = read.next();
        System.out.println("First letter is: " + firstCharacter(name));

        System.out.println("Last letter is: " + lastCharacter(name));

        System.out.println("Separating first 3 letters");
        separating(name);

        System.out.println("Separating the whole name");
        wholeSeparation(name);

        System.out.println("Reversing the name");
        reverse(name);
    }
}
